<div class="payment-wrapper" style='background-image: linear-gradient(-225deg, rgba(52, 18, 0, 0.6) 0%, rgba(110, 55, 0, 0.4) 50%), url("http://res.cloudinary.com/da6umoo9p/image/upload/v1497424321/Fitness-payment_tiprcp.png")'>
  <div class="container login-container payment-form">
    <div class="row">
      <div class="col-xs-12 col-md-4 col-md-offset-4">
        <div class="form-inputs text-center" style="margin-top: 1px; padding-bottom: 30px;">

          <h1>Achat d'une entr√©e <%= @booking.gym_sku %></h1>
          <%= form_tag gym_booking_payments_path(@gym, @booking) do %>
          <article>
            <label class="amount">
              <span>Prix total: <%= humanized_money_with_symbol(@booking.amount) %></span>
            </label>
          </article>

          <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-name="<%= @gym.name %>"
          data-email="<%= current_user.email %>"
          data-description="Hopfit <%= @booking.gym_sku %>"
          data-amount="<%= @booking.amount_cents %>"
          data-currency="<%= @booking.amount.currency %>"></script>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
